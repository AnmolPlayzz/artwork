html  
  head
    title= title
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    style(type='text/css').
          body {
              margin: 5%;
              background-color: #1a1a1a;
          }

          * {
            font-family: Arial;
          }

          .conatiner {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            background-color: #2b2b2b;
            padding: 10px;
            border-radius: 5px;
            gap: 10px
          }


          .img {
            background-color: #1b1b1b;
            padding: 10px;
            border-radius: 5px;
            display: grid;
            align-items: center;
          }

          .img img {
            border-radius: 5px;
            width: 100%;
          }

          .head {
            color: white;
            margin-bottom: 14px;
            margin-left: 7px;
            position: relative
          }

          .head::before {
            position: absolute;
            content: "";
            background-color: white;
            left: 0;
            bottom: 0;
            width: 55%;
            height: 2px;
          }

  body
  <h1 class="head">Artwork</h1>
    div(class="conatiner")
      each image in images
        div(class="img")
          img(src=image)