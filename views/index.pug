html  
  head
    title= title
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    style(type='text/css').
          body {
              margin: 5%;
              background-color: #1a1a1a;
          }

          * {
            font-family: Arial;
          }

          .conatiner {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            background-color: #2b2b2b;
            padding: 10px;
            border-radius: 5px;
            gap: 10px
          }


          .img {
            background-color: #1b1b1b;
            padding: 10px;
            border-radius: 5px;
            display: grid;
            align-items: center;
            transition: all 0.1s ease;
          }
          .img:hover {
            transform: translateY(-10px) scale(1.2);
            background-color: #313131;
            box-shadow: 0px 10px 20px #1e1e1e;
            transition: all 0.3s ease;
          }

          .img img {
            border-radius: 5px;
            width: 100%;
          }

          .head {
            color: white;
            margin-bottom: 14px;
            margin-left: 7px;
            position: relative
          }

          .head::before {
            position: absolute;
            content: "";
            background-color: white;
            left: 0;
            bottom: 0;
            width: 55%;
            height: 2px;
          }
          .view {
            display: none;
            position: fixed;
            opacity: 0;
            top: 0;
            left: 0;
            background-color: rgba(0,0,0,0.5);
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            justify-content: center;
            align-items: center;
            backdrop-filter: blur(25px);
            transition: all 0.2s ease
          }
          .view img {
            max-height: 85vh;
            max-width: 80vw;
          }
          .close {
            position: absolute;
            width: 40px;
            top: 10;
            left: 10;
            filter: contrast(20%) brightness(1.4);
            transition: all 0.3s ease;
          }
          .close:hover {
            filter: contrast(20%) brightness(2);
            transform: scale(120%) rotateZ(90deg)
          }
          
  <script defer type="text/javascript" src="/viewer.js"></script>
  body
  <h1 class="head">Artwork</h1>
    div(class="conatiner")
      each image in images
        div(class="img")
          img(src=image)
    div(class="view")
      img()
      <img class="close" src="/close.svg">